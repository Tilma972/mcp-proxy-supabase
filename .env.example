# Supabase Configuration
SUPABASE_PROJECT_REF=your_project_ref_here
SUPABASE_PAT=your_pat_token_here
SUPABASE_MCP_BASE_URL=https://mcp.supabase.com
SUPABASE_URL=https://your_project_ref_here.supabase.co
SUPABASE_API_KEY=your_supabase_anon_or_service_role_key_here

# Proxy Authentication
X_PROXY_KEY=your_secure_proxy_key_here

# FlowChat MCP Authentication (for /mcp/tools/* endpoints)
FLOWCHAT_MCP_KEY=your_flowchat_mcp_key_here

# FlowChat Worker URLs
DATABASE_WORKER_URL=http://localhost:8001
DOCUMENT_WORKER_URL=http://localhost:8002
STORAGE_WORKER_URL=http://localhost:8003
EMAIL_WORKER_URL=http://localhost:8004

# FlowChat Worker Authentication
WORKER_AUTH_KEY=your_worker_auth_key_here

# Telegram Bot Configuration (HITL - Human In The Loop)
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_secure_random_secret_here
TELEGRAM_ADMIN_ID=your_admin_user_id
TELEGRAM_WEBHOOK_URL=https://supabase.dsolution-ia.fr/webhook/telegram

# HITL Configuration
HITL_ENABLED=true
HITL_TIMEOUT_MINUTES=30
HITL_FACTURE_THRESHOLD=1500.0

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT=200/minute
